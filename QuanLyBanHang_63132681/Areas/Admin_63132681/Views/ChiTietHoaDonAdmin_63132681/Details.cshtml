



@model IEnumerable<QuanLyBanHang_63132681.Models.ChiTietHoaDon>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Areas/Admin_63132681/Views/Shared/_LayoutAdmin.cshtml";
    }
<div class="content-wrapper">
    <div class="center-container">

        @foreach (var m in ViewBag.Main)
        {
            <div class="card user-card">
                <div class="card-body pb-0">
                    <div class="d-flex mb-3 align-items-center">
                        <div class="dz-media mr-3">
                            <img src="~/Content/images/items/avatar.png" />
                        </div>
                        
                        <div>
                            <h5 class="title"><a href="javascript:void(0);">Tên Khách Hàng: @m.khachhang.HoTen</a></h5>
                            <span class="text-primary">Khách Hàng</span>
                        </div>
                    </div>
                    @*<p class="fs-12">Answering guest inquiries, directing phone calls, coordinating travel plans, and more.</p>*@
                    <ul class="list-group list-group-flush">

                        <li class="">
                            <span class="mb-0 title">Mã Hóa Đơn</span> :
                            <span class="text-black ml-2">@m.donhang.MaHoaDon</span>
                        </li>
                        <li class="">
                            <span class="mb-0 title">Mã Khách Hàng</span> :
                            <span class="text-black ml-2">@m.khachhang.MaKhachHang</span>
                        </li>
                        <li class="">
                            <span class="mb-0 title">Tên Khách Hàng</span> :
                            <span class="text-black ml-2">@m.khachhang.HoTen</span>
                        </li>
                        <li class="">
                            <span class="mb-0 title">Số Điện Thoại</span> :
                            <span class="text-black ml-2">@m.khachhang.DienThoai</span>
                        </li>
                        <li class="">
                            <span class="mb-0 title">Địa Chỉ</span> :
                            <span class="text-black ml-2">@m.khachhang.DiaChi</span>
                        </li>
                        <li class="">
                            <span class="mb-0 title">Email</span> :
                            <span class="text-black ml-2">@m.khachhang.Email</span>
                        </li>

                    </ul>
                </div>
                <div class="">
                    @*<a href="javascript:void(0);" class="btn btn-info btn-xs">Quay Lại</a>*@
                    @Html.ActionLink("Quay lại", "Index", "HoaDonAdmin_63132681")

                </div>
            </div>
        }
    </div>


    <table class="table table-striped">
        <thead>
            <tr>
                <th>Số STT</th>
                <th>Tên Sản Phẩm</th>
                
                <th>Số Lượng</th>
                <th>Đơn Giá</th>
                <th>Thành Tiền</th>
            </tr>
        </thead>
        <tbody>
            @{
                double tongtien = 0;
                int i = 0;
            }
            @foreach (var item in ViewBag.Sub)
            {
                i++;
                double donGia = Convert.ToDouble(item.sanpham.DonGia);
                double soLuong = Convert.ToDouble(item.ctdh.SoLuong);
                double thanhTien = donGia * soLuong;

                tongtien += thanhTien;

                <tr>
                    <td>@i</td>
                    <td>@item.sanpham.TenSanPham</td>
                    
                    <td>@item.ctdh.SoLuong</td>
                    <td>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,##0}", donGia)</td>
                    <td>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,##0}", thanhTien)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="5"></th>
                <th>Tổng Tiền:</th>
                <th>@String.Format(System.Globalization.CultureInfo.InvariantCulture, "{0:0,##0}", tongtien)</th>
            </tr>
        </tfoot>
    </table>
</div>
  

<style>
    /* Thiết lập một lớp để căn giữa màn hình */
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        
    }
    li{
        list-style: none;
        border-bottom: 1px solid #808080;
    }

    /* Tạo khung cho thẻ card */
    .user-card {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
        width: 300px; /* Độ rộng của khung */
    }

    /* Nếu bạn muốn có đường biên cho khung */
    .user-card {
        border: 2px solid #007bff; /* Màu đường biên xanh dương */
        padding: 10px; /* Khoảng cách giữa nội dung và đường biên */
    }

        .user-card:hover {
            transform: translateY(-5px);
        }

    .card-body {
        padding: 20px;
    }


    .dz-media img {
        width: 60px; /* Kích thước ảnh */
        height: 60px;
        border-radius: 50%; /* Để ảnh có hình dạng hình tròn */
        object-fit: cover;
        margin-right: 15px;
    }

    .title {
        font-size: 18px;
        margin-bottom: 5px;
    }

    .text-primary {
        color: #007bff; /* Màu chữ xanh dương */
    }

    .list-group-flush {
        padding: 0;
    }

    .list-group-item {
        border: none;
        padding: 5px 0;
    }

    .title {
        font-weight: bold;
    }

    .text-black {
        color: #000;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        color: #212529;
        text-align: center;
        vertical-align: middle;
        user-select: none;
        background-color: #007bff;
        border: 1px solid #007bff;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: background-color 0.3s ease;
        text-decoration: none;
        cursor: pointer;
        color: #fff;
    }

        .btn:hover {
            background-color: #0056b3; /* Màu chữ xanh đậm hơn khi hover */
        }

    /* Thêm margin giữa các thẻ card */
    .user-card:not(:last-child) {
        margin-bottom: 20px;
    }

</style>