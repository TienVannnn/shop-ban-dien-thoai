@model QuanLyBanHang_63132681.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin_63132681/Views/Shared/_LayoutAdmin.cshtml";
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var fileupload = $("#Avatar");
            var image = $("#FileUpload");
            image.click(function () {
                fileupload.click();
            });
            fileupload.change(function () {
                var fileName = $(this).val().split('\\')[$(this).val().split('\\').length - 1];
                document.getElementById("AnhSanPham").value = fileName;
            });
        });
    </script>
}
<div class="content-wrapper">
    <h4 class="text-center text-uppercase fw-bold text-success">CẬP NHẬT THÔNG TIN SẢN PHẨM</h4>
    <hr class="w-25 m-md-auto" />
    @using (Html.BeginForm("Edit", "SanPhamAdmin_63132681", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaSanPham)
        <div class="form">
            <div class="inputfield">
                @Html.LabelFor(model => model.MaSanPham, htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.MaSanPham, new { htmlAttributes = new { @class = "input", disabled = "disabled", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MaSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="inputfield">
                @Html.LabelFor(model => model.TenSanPham, htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="inputfield">
                @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="inputfield">
                @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="inputfield">
                @Html.LabelFor(model => model.AnhSanPham, htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.AnhSanPham, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.AnhSanPham, "", new { @class = "text-danger" })
                    <input type="file" name="Avatar" id="Avatar" />
                </div>
            </div>


            <div class="inputfield">
                @Html.LabelFor(model => model.MaLoaiSanPham, "Mã Loại Sản Phẩm", htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    @Html.DropDownList("MaLoaiSanPham", null, htmlAttributes: new { @class = "input" })
                    @Html.ValidationMessageFor(model => model.MaLoaiSanPham, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="inputfield">
                @Html.LabelFor(model => model.SoLuongDaBan, htmlAttributes: new { @class = "fw-bold" })
