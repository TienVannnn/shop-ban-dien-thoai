                    @Html.EditorFor(model => model.SoLuongDaBan, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.SoLuongDaBan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="inputfield">
                @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "fw-bold" })
                <div class="col-md-8">
                    <div class="checkbox">
                        Giảm Giá @Html.RadioButtonFor(model => model.TinhTrang, "True", new { @checked = "checked" }) &nbsp;
                        Đề Xuất @Html.RadioButtonFor(model => model.TinhTrang, "False")
                        @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>



            <div class="second--btn">
                <input type="submit" value="Cập nhật" class="btn--one" />
                @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn--two" })
            </div>
        </div>

    }


</div>

