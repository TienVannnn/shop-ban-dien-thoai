@model IEnumerable<QuanLyBanHang_63132681.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin_63132681/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 10);
}



<div class="content-wrapper">
    <p class="mt-3 text-uppercase font-weight-bold text-center">Danh Sách khách hàng</p>
    <div id="gridContent">
        @ViewBag.TB
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: false,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
         grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("MaKhachHang","Mã Khách Hàng"), //the model fields to display
        grid.Column("HoTen","Tên Khách Hàng"),
       
         grid.Column("DienThoai","Điện Thoại"),
          grid.Column("DiaChi","Địa Chỉ"),
        grid.Column("Email","Email"),

grid.Column("Chức năng", format: @<text>

    <a href="@Url.Action("Details",
                    new { id = item.MaKhachHang})" class="edit-btn"><abbr title="Xem chi tiết"><img src="~/Content/images/icons/details.png" width="20" height="20" /></abbr></a>
    @*<a href="@Url.Action("Delete",
                    new { id = item.MaKhachHang})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="~/Content/images/icons/delete.png" width="20" height="20" />
        </abbr>
    </a>*@
</text>),

}
)
    </div>

    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: #e7f5ff;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</div>
