@model QuanLyBanHang_63132681.Models.KhachHang

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section-content padding-y" style="background-image: url('/Content/images/items/bglogin.jpg')">

    <!-- ============================ COMPONENT REGISTER   ================================= -->
    <div class="card mx-auto" style="max-width: 520px; margin-top: 40px; border-radius: 10px; box-shadow: rgba(0, 0, 0, 0.15) 0px 15px 25px, rgba(0, 0, 0, 0.05) 0px 5px 10px;">
        <article class="card-body">
            <header class="mb-4 text-center"><h4 class="card-title">Đăng Ký</h4></header>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-row">
                    <div class="col form-group">
                        @Html.LabelFor(model => model.HoTen)
                        @Html.EditorFor(model => model.HoTen, "Họ và tên", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div> <!-- form-group end.// -->
                    <div class="col form-group">
                        @Html.LabelFor(model => model.DienThoai)
                        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                    </div> <!-- form-group end.// -->
                </div> <!-- form-row end.// -->


                <div class="form-group">
                    @Html.LabelFor(model => model.DiaChi)
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })

                </div> <!-- form-row.// -->

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                   
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhau)
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.XacNhanMatKhau)
                    @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> ĐĂNG KÝ  </button>
                </div> <!-- form-group// -->
                <div class="form-group">
                    <label class="custom-control custom-checkbox"> <input type="checkbox" class="custom-control-input" , id="agreeCheckbox"> <div class="custom-control-label"> Tôi đồng ý với các <a href="#">điều khoản và dịch vụ</a>  </div> </label>
                </div> <!-- form-group end.// -->
            }
        </article><!-- card-body.// -->
        <p class="text-center mt-1 mb-3">Bạn đã có tài khoản ? <a href="@Url.Action("Login", "Home")">Đăng Nhập</a></p>
    </div> <!-- card .// -->

    <br><br>
    <!-- ============================ COMPONENT REGISTER  END.// ================================= -->


</section>


<script>
    // Kiểm tra xem checkbox đã được chọn hay không trước khi submit form
    $(document).ready(function () {
        $('form').submit(function () {
            if (!$('#agreeCheckbox').is(':checked')) {
                alert('Bạn phải đồng ý với điều khoản để đăng ký');
                return false; // Ngăn chặn việc submit form
            }
        });
    });

    $(document).ready(function () {
        $('form').submit(function () {
            if ($('#MatKhau').val() !== $('#XacNhanMatKhau').val()) {
                alert('Mật khẩu và xác nhận mật khẩu không khớp');
                return false; // Ngăn chặn việc submit form
            }
        });
    });
</script>





